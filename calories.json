{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 200,
    "height": 200,
    "data": {
    "url": "https://raw.githubusercontent.com/tay1203/Homework-Week10/refs/heads/main/nutrition.csv"
  },
  "params": [
    {
      "name": "Food",
      "value": "Big Mac"
    }
  ],
    "transform": [
    { "filter": "datum.Food == Food" },
      {
        "calculate": "2130 - datum['Energy (kcal)']",
        "as": "Remaining Calories"
      },
      {
        "calculate": "datum['Energy (kcal)'] / 2130 * 100",
        "as": "Percentage"
      }
    ],
    "layer": [
      {
        "transform": [
          {
            "fold": ["Energy (kcal)", "Remaining Calories"],
            "as": ["Category", "Value"]
          }
        ],
        "mark": {
          "type": "arc",
          "innerRadius": 70,
          "tooltip": true
        },
        "encoding": {
          "theta": {
            "field": "Value",
            "type": "quantitative",
            "sort": "ascending"
          },
          "color": {
            "field": "Category",
            "type": "nominal",
            "scale": {
              "domain": ["Energy (kcal)", "Remaining Calories"],
              "range": ["#C8102E", "#FFCC00"]
            
            },
            "legend": {
              "title": "Daily Calories (2130 kcal)"
            }
          },
          "order": { "field": "Category", "sort": "ascending" },
          "tooltip": [
            { "field": "Category", "type": "nominal" },
            { "field": "Value", "type": "quantitative", "format": ".2f" }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 20,
          "font": "Arial"
        },
        "encoding": {
          "text": {
            "field": "Percentage",
            "type": "quantitative",
            "format": ".0f"
          },
          "y": { "value": 80 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial"
        },
        "encoding": {
          "text": { "value": "of Daily" },
          "y": { "value": 100 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial"
        },
        "encoding": {
          "text": { "value": "Recommended" },
          "y": { "value": 115 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial"
        },
        "encoding": {
          "text": { "value": "Calories" },
          "y": { "value": 130 }
        }
      }
    ]
  }